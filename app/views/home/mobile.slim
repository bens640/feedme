        div
          input#Field5_1 name="Field5" tabindex="6" type="radio" value=("Second Choice") /
          label.choice for="Field5_1"  Second Choice
        div
          input#Field5_2 name="Field5" tabindex="7" type="radio" value=("Third Choice") /
          label.choice for="Field5_2"  Third Choice
  div
    fieldset
      legend#title6.desc
        | Check All That Apply
      div
        div
          input#Field6 name="Field6" tabindex="8" type="checkbox" value=("First Choice") /
          label.choice for="Field6"  First Choice
        div
          input#Field7 name="Field7" tabindex="9" type="checkbox" value=("Second Choice") /
          label.choice for="Field7"  Second Choice
        div
          input#Field8 name="Field8" tabindex="10" type="checkbox" value=("Third Choice") /
          label.choice for="Field8"  Third Choice
  div
